Here is some marketing content.

And a button to opt-in: <a href="javascript:MyOptIn('true')"> Opt In</a>
And a button to opt-out: <a href="javascript:MyOptIn('false')"> Opt Out</a>

<script type="text/javascript">

    function MyOptIn(what) {

        var targetUrl = "https://go.pardot.com/analytics?ver=3&campaign_id=1001&account_id=19202&pi_opt_in="+what;

        console.log("Optin: "+what);

        $.ajax({
            url: targetUrl,
            type: 'GET',
            dataType: 'text',
            crossDomain: true
        }).done(function(){console.log('done')});
    }
</script>

